<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_play_quiz">

  <androidx.cardview.widget.CardView
      android:layout_width="150dp"
      android:layout_height="55dp"
      android:id="@+id/score_quiz"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="20dp"
    app:cardBackgroundColor="@color/item_card_bg"
    app:cardCornerRadius="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:background="@drawable/coin_golden"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="1000"
      android:layout_marginLeft="60dp"
      android:textSize="20sp"
   android:layout_marginTop="12dp"/>
  </androidx.cardview.widget.CardView>


  <androidx.cardview.widget.CardView
      android:layout_width="150dp"
      android:id="@+id/answer_details_quiz"
      android:layout_height="75dp"
    app:cardBackgroundColor="@color/correct_incorrect"
    app:cardCornerRadius="15dp"
    android:layout_marginLeft="230dp"
    android:layout_marginTop="70dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_check_24"
      android:layout_marginTop="15dp"
        android:backgroundTint="@color/correct"
      android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:background="@drawable/ic_baseline_clear_24"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="38dp"
      android:backgroundTint="@color/Incorrect"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="correct"
      android:textSize="20sp"
      android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"/>

  </androidx.cardview.widget.CardView>


  <androidx.cardview.widget.CardView
      android:id="@+id/quiz_item_question"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      app:cardCornerRadius="15dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      android:layout_marginTop="190dp"
      app:cardBackgroundColor="@color/item_card"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="Question:"
      android:textSize="20sp"
      android:layout_marginTop="12dp"
      android:layout_marginLeft="15dp"
      android:id="@+id/question_quiz"/>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="130dp"
      android:id="@+id/option_quiz_a"
      android:layout_height="75dp"
    app:cardBackgroundColor="@color/option_quiz"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="385dp"
    android:layout_marginLeft="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="A."
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"/>


  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="130dp"
      android:id="@+id/option_quiz_b"
      android:layout_height="75dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      android:layout_marginTop="385dp"
      android:layout_marginLeft="250dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="130dp"
      android:id="@+id/option_quiz_c"
      android:layout_height="75dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      android:layout_marginTop="500dp"
      android:layout_marginLeft="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="130dp"
      android:id="@+id/option_quiz_d"
      android:layout_height="75dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      android:layout_marginTop="500dp"
      android:layout_marginLeft="250dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>


  </androidx.cardview.widget.CardView>

  <TextView
      android:layout_width="180dp"
      android:id="@+id/next_quiz_btn"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="600dp"
      android:background="@drawable/tab_indicator"
      android:text="Next/Submit"
      android:textColor="@color/tab_event"
      android:textSize="20sp"
      android:gravity="center"
      />
</RelativeLayout>