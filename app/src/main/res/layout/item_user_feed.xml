<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="22dp"
    android:padding="10dp"
    app:cardBackgroundColor="#DBB05E"
    app:cardElevation="20dp"
    app:cardCornerRadius="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/user_feed_profile_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/user_icon_view"
                android:contentDescription="User profile image" />

            <TextView
                android:id="@+id/user_feed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/user_feed_profile_image"
                android:text="user_name" />

            <ImageView
                android:id="@+id/user_feed_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="15dp"
                android:layout_marginEnd="22dp"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:contentDescription="more option"/>


        </RelativeLayout>

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="22dp"
                android:elevation="20dp"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:id="@+id/user_feed_posted_image"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:adjustViewBounds="true"
                    android:background="#F9FAF6"
                    android:elevation="20dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="user post"/>

            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_3"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="22dp">

                <TextView
                    android:id="@+id/user_feed_caption_goes_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/user_feed_heart_icon"
                    android:gravity="start"
                    android:padding="8dp"
                    android:text="Caption Goes Here"
                    android:textAppearance="@style/caption_goe"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/user_feed_message_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="comments button"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_message_24" />

                <ToggleButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toStartOf="@+id/user_feed_message_icon"
                    android:background="@drawable/toggle_selector"

                    android:textOff=""
                    android:textOn="" />
<!--                <ImageView-->
<!--                    android:id="@+id/user_feed_heart_icon"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_toStartOf="@+id/user_feed_message_icon"-->
<!--                    android:contentDescription="like button"-->
<!--                    android:padding="8dp"-->
<!--                    android:src="@drawable/vector" />-->


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>