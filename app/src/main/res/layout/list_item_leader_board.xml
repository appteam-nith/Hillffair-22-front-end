<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_card_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="15dp"
        android:elevation="7dp"
        app:cardBackgroundColor="@color/item_card"
        >


        <TextView
            android:id="@+id/LB_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/LB_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginLeft="270dp"
            android:textSize="25sp"
            android:layout_marginTop="17dp">

        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coin_golden"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="21dp"></ImageView>

        <ImageView
            android:id="@+id/quiz_profile_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse_quiz"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"></ImageView>



    </androidx.cardview.widget.CardView>


</RelativeLayout>