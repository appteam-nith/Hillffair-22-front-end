<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/bg_event_details"
    android:orientation="horizontal"
    tools:context=".screens.eventsAndWorkshops.EventAndWorkshopDetailsFragment">


    <TextView
        android:id="@+id/title_TV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tab_indicator"
        android:backgroundTint="@color/bottom_navigation_background"
        android:paddingTop="5dp"
        android:text="Title of Workshop"
        android:textAlignment="center"
        android:textColor="@color/tab_event"
        android:textSize="25sp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/item_card_bg"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/full_spec_poster"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="420dp"
            android:text="Description:"
            android:textAlignment="textStart"
            android:textColor="@color/register"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="20dp"
            android:background="@color/register" />

        <TextView
            android:id="@+id/description_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="420dp"
            android:text="Description:"
            android:textAlignment="textStart"
            android:textColor="@color/register"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:background="@drawable/tab_indicator"
        android:backgroundTint="@color/bottom_navigation_background"
        android:paddingTop="5dp"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/tab_event"
        android:textSize="20sp" />


</RelativeLayout>