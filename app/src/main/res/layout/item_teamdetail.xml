<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20sp"
            android:background="@color/imgbg">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_view_team_name"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/team_mem_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:hapticFeedbackEnabled="false"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/team_member_name"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/image_card_view_team_name"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/designation"
                android:textColor="@color/brown"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="20sp"
                android:layout_below="@+id/team_member_name"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>