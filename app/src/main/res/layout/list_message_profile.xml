<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/message_profile"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="@dimen/side_margin_16"
        android:layout_marginTop="@dimen/side_margin_12"
        android:layout_marginBottom="@dimen/side_margin_12"
        android:layout_marginEnd="@dimen/side_margin_16_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/item_card_bg"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/display_name_msg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/transparent_send_message_btn"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="Enter your display name">

            </TextView>

            <TextView
                android:id="@+id/send_msg_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/tab_indicator"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="send"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>