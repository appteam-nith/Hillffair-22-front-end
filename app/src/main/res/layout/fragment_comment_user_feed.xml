<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_feed_secondary_color"
    tools:context=".screens.home.CommentUserFeedFragment">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/side_margin_22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/side_margin_22dp"
        android:layout_marginBottom="42dp"
        app:cardBackgroundColor="@color/user_feed_primary_color"
        app:cardElevation="@dimen/floating_btn_elevation"
        android:padding="@dimen/padding_8dp"
        app:cardCornerRadius="@dimen/card_radius_20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_margin_10">

                <ImageView
                    android:id="@+id/user_comment_profile_image"
                    android:layout_width="@dimen/user_profile_image_size"
                    android:layout_height="@dimen/user_profile_image_size"
                    android:layout_marginStart="@dimen/side_margin_25dp"
                    android:layout_marginTop="@dimen/side_margin_8dp"
                    android:layout_marginEnd="@dimen/side_margin_8dp"
                    android:layout_marginBottom="@dimen/side_margin_8dp"
                    android:background="@drawable/user_icon_view"
                    android:contentDescription="@string/user_profile_picture"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/side_margin_10"
                    android:layout_toEndOf="@+id/user_comment_profile_image"
                    android:layout_toStartOf="@+id/user_comment_more_icon"
                    android:text="@string/user_name" />

                <ImageView
                    android:id="@+id/user_comment_more_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/side_margin_22dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_more_horiz_24"
                     android:contentDescription="@string/more_option"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margin_25dp"
                android:layout_marginTop="@dimen/side_margin_10"
                android:layout_marginEnd="@dimen/side_margin_22dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:elevation="@dimen/card_elevation_20dp"
                    android:scaleType="centerCrop"
                    app:cardCornerRadius="@dimen/card_radius_20dp">

                    <ImageView
                        android:id="@+id/user_comment_posted_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_post_image_height"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/user_post"/>

                </com.google.android.material.card.MaterialCardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_margin_8dp">

                    <TextView
                        android:id="@+id/user_comment_caption_goe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/caption_goes_here"
                        android:layout_toStartOf="@+id/heart_icon"
                        android:textAppearance="@style/caption_goe"
                        android:textSize="@dimen/text_size_14sp" />

                    <ImageView
                        android:id="@+id/user_comment_message_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_8dp"
                        android:src="@drawable/ic_baseline_message_24"
                        android:contentDescription="@string/comments_button"/>

                    <ImageView
                        android:id="@+id/heart_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_8dp"
                        android:layout_toStartOf="@+id/user_comment_message_icon"
                        android:contentDescription="@string/like_button"
                        android:src="@drawable/toggle_selector" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_margin_8dp"
                    android:layout_marginBottom="@dimen/side_margin_20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_comment_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/comment_section"
                        tools:listitem="@layout/item_comment_user_feed" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/comment_section"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="@color/user_feed_primary_color"
                        android:padding="@dimen/padding_8dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/user_feed_comment_outline">

                            <EditText
                                android:id="@+id/user_comment_write_your_comment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/user_comment_post_comment_icon"
                                android:backgroundTint="@color/transparent"
                                android:gravity="start"
                                android:hint="@string/write_your_comment"
                                android:inputType="textLongMessage"
                                android:padding="@dimen/padding_8dp"
                                android:singleLine="true"

                                />

                            <ImageView
                                android:id="@+id/user_comment_post_comment_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/side_margin_8dp"
                                android:padding="@dimen/padding_8dp"
                                android:src="@drawable/user_feed_send_icon"
                                android:contentDescription="@string/comment_post_button"/>
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>