<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.eventsAndWorkshops.EventAndWorkshopDetailsFragment"
    android:layout_gravity="top"
    android:orientation="horizontal"
    android:background="@color/bg_event_details"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tab_indicator"
        android:paddingTop="5dp"
        android:text="Leaderboard"
        android:textAlignment="center"
        android:textColor="@color/tab_event"
        android:textSize="25sp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/leaderboard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="15dp"
       android:elevation="7dp"
        app:cardBackgroundColor="@color/item_card"
        >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginLeft="270dp"
            android:textSize="25sp"
            android:layout_marginTop="17dp">

        </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coin_golden"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="21dp"></ImageView>

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/ellipse_quiz"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="20dp"></ImageView>



    </androidx.cardview.widget.CardView>

</RelativeLayout>