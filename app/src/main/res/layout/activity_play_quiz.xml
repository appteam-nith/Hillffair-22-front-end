<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_play_quiz">


  <androidx.cardview.widget.CardView
      android:id="@+id/score_quiz"
      android:layout_width="150dp"
      android:layout_height="50dp"
      android:layout_marginStart="25dp"
      app:cardBackgroundColor="@color/item_card_bg"
      app:cardCornerRadius="15dp"
      app:layout_constraintBottom_toBottomOf="@+id/answer_details_quiz"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/answer_details_quiz">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/coin_golden"
        android:contentDescription="@string/TODO"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/_1000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="108dp" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/answer_details_quiz"
      android:layout_width="160dp"
      android:layout_height="75dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="60dp"
      android:layout_marginEnd="25dp"
      app:cardBackgroundColor="@color/correct_incorrect"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/score_quiz"
      app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/ic_baseline_check_24"
        android:backgroundTint="@color/correct"
        android:contentDescription="@string/TODO"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/Incorrect"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/ic_baseline_clear_24"
        android:backgroundTint="@color/Incorrect"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="163dp"
        android:contentDescription="@string/TODO"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/Correct"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="152dp" />


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/quiz_item_question"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="190dp"
      android:layout_marginRight="25dp"
      android:paddingBottom="10dp"
      app:cardBackgroundColor="@color/item_card"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/question_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/question"
        android:textSize="20sp" />


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/option_quiz_a"
      android:layout_width="130dp"
      android:layout_height="75dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="40dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toStartOf="@+id/option_quiz_d"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/option_quiz_c">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/option_C"
        android:textSize="20sp" />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/option_quiz_b"
      android:layout_width="130dp"
      android:layout_height="75dp"
      android:layout_marginTop="50dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="@+id/option_quiz_d"
      app:layout_constraintStart_toStartOf="@+id/option_quiz_d"
      app:layout_constraintTop_toBottomOf="@+id/quiz_item_question">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/option_B"
        android:textSize="20sp" />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/option_quiz_c"
      android:layout_width="130dp"
      android:layout_height="75dp"
      android:layout_marginTop="50dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="@+id/option_quiz_a"
      app:layout_constraintStart_toStartOf="@+id/option_quiz_a"
      app:layout_constraintTop_toBottomOf="@+id/quiz_item_question">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/option_A"
        android:textSize="20sp" />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/option_quiz_d"
      android:layout_width="130dp"
      android:layout_height="75dp"
      android:layout_marginStart="170dp"
      android:layout_marginTop="40dp"
      app:cardBackgroundColor="@color/option_quiz"
      app:cardCornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/option_quiz_b">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/option_D"
        android:textSize="20sp" />
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/next_quiz_btn"
      android:layout_width="180dp"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="180dp"
      android:background="@drawable/tab_indicator"
      android:gravity="center"
      android:text="@string/Next_Submit"
      android:textColor="@color/tab_event"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/quiz_item_question" />






</androidx.constraintlayout.widget.ConstraintLayout>