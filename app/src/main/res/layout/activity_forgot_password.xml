<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".screens.account.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_frame_81" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_group_37" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/layout_padding_left"
            android:paddingEnd="@dimen/layout_padding_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="@string/enter_your_email_linked_to_your_account"
                android:textAlignment="center"
                android:textColor="@color/et_text_color" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="@dimen/EditText_Width"
                android:layout_height="@dimen/EditText_Height"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/custom_text"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/et_padding_left"
                android:paddingTop="@dimen/et_padding_top"
                android:paddingEnd="@dimen/et_padding_right"
                android:paddingBottom="@dimen/et_padding_bottom"
                android:textAlignment="center"
                android:textColor="@color/et_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/Button_width"
                android:layout_height="@dimen/Button_Height"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>