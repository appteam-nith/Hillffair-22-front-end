<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_card_bg">

<androidx.cardview.widget.CardView
    android:id="@+id/events_RV_item_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_marginStart="@dimen/side_margin_16"
    android:layout_marginTop="@dimen/top_margin_0"
    android:layout_marginEnd="@dimen/side_margin_10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_event_and_workshop_cardbg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:text="Treasure hunt"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:layout_marginBottom="50px"
            >

        </TextView>

        <TextView
            android:id="@+id/Club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="english club"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15">

        </TextView>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th April 2022"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18">

        </TextView>


        <Button
            android:visibility="gone"
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/register"
            android:text="Register">

        </Button>


    </LinearLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>