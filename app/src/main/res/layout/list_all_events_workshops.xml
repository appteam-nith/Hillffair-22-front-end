<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_card_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/events_RV_item_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="@dimen/side_margin_16"
        android:layout_marginTop="@dimen/side_margin_12"
        android:layout_marginBottom="@dimen/side_margin_12"
        android:layout_marginEnd="@dimen/side_margin_16_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_event_workshop_card"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:text="Treasure hunt Events"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24"
                android:layout_marginBottom="3dp"
                >

            </TextView>

            <TextView
                android:id="@+id/Club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English club"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                android:layout_marginBottom="@dimen/layout_margin_bottom_5"
                >

            </TextView>

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5th April 2022"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/layout_margin_bottom_5"
                >

            </TextView>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>